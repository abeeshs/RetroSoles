  
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Edit Brand</h2>
              </div>
            </div>
            {{#each brand}}
            <div class="row tm-edit-product-row">
                <div class="col-xl-6 col-lg-6 col-md-12">
                    <form action="/admin/edit-brand/{{this._id}}" method="post" class="tm-edit-product-form" >
                        <div class="form-group mb-3">
                        <label for="name">Brand Name</label>
                        <input id="name"  name="category" type="text" value="{{this.brand}}" class="form-control validate"required/>
                        </div>
                        <div class="form-group mb-3">
                        <label for="description">Description</label>
                        <input id="name"  name="description" type="text" value="{{this.description}}" class="form-control validate"required  />
                        </div>
                  

                        <div class="custom-file mt-3 mb-3">
                  
                        </div>
                        <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Brand</button>
                        </div>
                    </form>
                </div>
                  {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
    