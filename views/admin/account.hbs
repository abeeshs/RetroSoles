<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Add Product</h2>
          </div>
        </div>
        <div class="row tm-edit-product-row">
          <div class="col-xl-6 col-lg-6 col-md-12">

            <form action="/admin/add-product" method="post" class="tm-edit-product-form" enctype="multipart/form-data">
              <div class="form-group mb-3">
                <label for="name">Product Name</label>
                <input id="name" name="name" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="description">Description</label>
                <textarea class="form-control validate" rows="3" name="description" required></textarea>
              </div>
              <div class="form-group mb-3">
                <label for="name">Category</label>
                <input id="name" name="category" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="name">Sub Category</label>
                <input id="name" name="subcategory" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="name">Brand</label>
                <input id="name" name="brand" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="category">Category</label>
                <select name="category" class="custom-select tm-select-accounts" id="category">
                  <option selected>Select category</option>
                  <option value="Men">Men</option>
                  <option value="Women">Women</option>
                </select>
                <label for="category">Sub Category</label>
                <select name="subcategory" class="custom-select tm-select-accounts" id="category">
                  <option selected>Select Sub category</option>
                  {{#each category}}
                  <option value="{{this._id}}">{{this.category}}</option>
                  {{/each}}
                </select>
                <label for="category">Brand</label>
                <select name="brand" class="custom-select tm-select-accounts" id="category">
                  <option selected>Select category</option>
                  {{#each brand}}
                  <option value="{{this._id}}">{{this.brand}}</option>
                  {{/each}}

                </select>
              </div>
              <div class="row">
                <div class="form-group mb-3 col-xs-12 col-sm-6">
                  <label for="expire_date">Size</label>
                  <input id="expire_date" name="size" type="text" class="form-control validate"
                    data-large-mode="true" />
                </div>
                <div class="form-group mb-3 col-xs-12 col-sm-6">
                  <label for="stock">Stock </label>
                  <input id="stock" name="stock" type="text" class="form-control validate" required />
                </div>
              </div>

          </div>
          <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4 d-flex-column">
            <div class="d-flex">
              <div class="tm-product-img-dummy mx-3 ">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"></i>
              </div>
              <div class="tm-product-img-dummy mx-3">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"></i>
              </div>
              <div class="tm-product-img-dummy mx-3">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"></i>
              </div>
              <div class="tm-product-img-dummy mx-3">

                <i class="fas fa-cloud-upload-alt tm-upload-icon"></i>
              </div>
            </div>
            <div class="custom-file mt-3 mb-3">

              <input id="fileInput" type="file" name="images" multiple />
              <input type="button" class="btn btn-primary btn-block mx-auto" value="UPLOAD PRODUCT IMAGE" />
            </div>
            <div class="form-group mb-3 mt-5 col-xs-12 col-sm-6">
              <label for="stock">Original Price</label>
              <input id="stock" name="orgprice" type="text" class="form-control validate" required />
            </div>
            <div class="form-group mb-3 col-xs-12 col-sm-6">
              <label for="stock">After Discount</label>
              <input id="stock" name="disprice" type="text" class="form-control validate" required />
            </div>
          </div>


