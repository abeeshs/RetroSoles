<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-3 col-lg-3">
            <ul class="user-profile ps-0">
                <li class="pt-5"> <a href="/user-profile"
                        class="nav-link btn btn-dark btn-black-default-hover active ">Profile</a></li>
                <li class="pt-2"> <a href="/orders-list"
                        class="nav-link btn btn-dark btn-black-default-hover active">Orders</a></li>
                <li class="pt-2"> <a href="/wishlist"
                        class="nav-link btn btn-dark btn-black-default-hover active">Wishlist</a></li>
                <li class="pt-2"> <a href="/user-all-address"
                        class="nav-link btn btn-dark btn-black-default-hover active">Address</a></li>
                <li class="pt-2"> <a href="/Wallet"
                        class="nav-link btn btn-dark btn-black-default-hover active">Wallet</a>
                </li>



            </ul>


        </div>

        <div class="col-12 col-sm-12 col-md-9 col-lg-9">

            <h4 class="text-center pt-3">Wishlist</h5>
                {{#if uwishlist}}
                {{#each uwishlist}}

                <div class="card">

                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-2 col-lg-4 col-md-4 col-4">
                                <p class="card-title text-dark fw-bold">Product</p>
                                <img style="height:70px ;" src="{{this.result.urls.[0]}}" alt="">
                            </div>
                            <div class="col-xl-4 col-lg-2 col-md-4 col-4">
                                <p class="card-title text-dark fw-bold">Product Name</p>
                                <p class="fw-normal mb-1">{{this.result.product}}</p>
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-4 col-4">
                                <p class="card-title text-dark fw-bold">Quantity</p>
                                <p class="fw-normal mb-1">{{this.quantity}}</p>
                            </div>

                            <div class="col-xl-2 col-lg-2 col-md-4 col-6">
                                <p class="card-title text-dark fw-bold">Actions</p>

                                <button class="btn btn-success">
                                    <a href="/add-to-cart/{{this.result._id}}" style="color:white;">Add to Cart</a>
                                </button>
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-4 col-6">
                                <p class="card-title text-dark fw-bold">Actions</p>

                                <button class="btn btn-dark">
                                    <a href="/wishlist/remove-product/{{this.result._id}}" style="color:white;"><i
                                            class="fa-solid fa-xmark"></i></a> </button>
                            </div>
                        </div>
                        {{!-- <h5 class="card-title text-dark fw-bold">Special title treatment</h5>
                        <p class="card-text">.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a> --}}
                    </div>

                </div>
                {{/each}}

                {{else}}
                <div class="container-fluid">

                    <div class="col d-flex justify-content-center">
                        <div class="card h25 d-flex justify-content-center">
                            <h4 class="fw-bold text-dark text-center mt-5">Wishlist Empty</h4>
                            <a href="/products">
                                <img class="img-fluid" src="/img/wishlist.png" class="card-img-top" style="height:320px"
                                    alt="Palm Springs Road" />
                                <div class="card-body d-flex justify-content-center">

                                    <p class="card-text"><a href="/products" class="primary-btn mb-5 ">Go to Shop</a>
                                    </p>
                                </div>
                            </a>
                        </div>
                    </div>


                </div>

                {{/if}}
        </div>
    </div>
</div>






