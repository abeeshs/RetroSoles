<div class="app">
    <div class="menu-toggle">
        <div class="hamburger">
            <span></span>
        </div>
    </div>

    <aside class="sidebar">


        <nav class="menu">
            <a href="/user-profile" class="menu-item {{this.about}}"><i class="fa-solid fa-user"></i> About Me</a>
            <a href="/user-all-address" class="menu-item {{this.address}}"><i
                    class="fa-sharp fa-solid fa-address-card"></i> Address</a>
            <a href="/orders-list" class="menu-item {{this.orders}}"><i class="fa-solid fa-list"></i> Orders</a>
            <a href="/wishlist" class="menu-item {{this.wishlist}}"><i class="fa-solid fa-heart"></i> Wishlist</a>
            <a href="/Wallet" class="menu-item {{this.wallet}}"><i class="fa-solid fa-wallet"></i> Wallet</a>
        </nav>

    </aside>

    <main class="content">
        {{#if uwishlist}}

        <div class="container">
            <div class="table-wrap">
                <table class="table table-responsive table-borderless">
                    <thead>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Add to Cart</th>
                        <th></th>


                    </thead>
                    <tbody>
                        {{#each uwishlist}}
                        <tr class="">
                            <td>
                                <input type="checkbox" id="check">
                            </td>
                            <td class="text-center">
                                <img class="pic" src="{{this.result.urls.[0]}}" alt="">
                            </td>
                            <td>
                                <div>
                                    <p class="m-0 fw-bold">{{this.result.product}}</p>
                                    <p class="m-0 text-muted">{{this.result.description}}</p>
                                </div>
                            </td>
                            <td>
                                <div class="fw-600">â‚¹{{this.result.discountprice}}</div>
                            </td>
                            <td class="d-">
                                <div class="fw-600">{{this.quantity}}</div>

                            </td>
                            <td class="d-">
                                <div class="fw-600"><button class="btn btn-success">
                                        <a href="/add-to-cart/{{this.result._id}}" style="color:white;">Add to Cart</a>
                                    </button></div>

                            </td>

                            <td>
                                <div class="fw-600">
                                    <button class="btn btn-dark">
                                        <a href="/wishlist/remove-product/{{this.result._id}}" style="color:white;"><i
                                                class="fa-solid fa-xmark"></i></a> </button>
                                </div>

                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
        {{else}}
        <div class="container">
            
            <div class="col d-flex justify-content-center">
                <div class="card w-40 d-flex justify-content-center">
                    <h4 class="fw-bold text-dark text-center mt-5">Wishlist Empty</h4>
                    <a href="/products">
                        <img src="/img/wishlist.png" class="card-img-top" style="height:350px"
                            alt="Palm Springs Road" />
                        <div class="card-body d-flex justify-content-center">

                            <p class="card-text"><a href="/products" class="primary-btn mb-5 ">Go to Shop</a></p>
                        </div>
                    </a>
                </div>
            </div>


        </div>
        {{/if}}
    </main>

</div>





